@model RemoteSchoolWebApp.Models.Teacher
<p>
    <a asp-action="CreateMessage">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Messages[0].Subject)
            </th>
            <th>
                Details
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Messages.Count == 0)
        {
            <tr>
                <td>
                    No messages to display.
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model.Messages)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject)
                    </td>
                    <td>
                        <a asp-action="MessageDetails" asp-route-id="@item.Id">Details</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

