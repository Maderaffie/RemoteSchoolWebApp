@model RemoteSchoolWebApp.Models.MessageParentViewModel

<h1>Create</h1>

<h4>Message</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateMessage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Message.Subject" class="control-label"></label>
                <input asp-for="Message.Subject" class="form-control" />
                <span asp-validation-for="Message.Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.Content" class="control-label"></label>
                <input asp-for="Message.Content" class="form-control" />
                <span asp-validation-for="Message.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Parents" class="control-label"></label>
                <select asp-for="@Model.Message.ParentId" asp-items="Model.Parents"></select><br />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Assignments">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
